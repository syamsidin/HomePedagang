<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/list_produk" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_below="@+id/list_produk"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@+id/img"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ratingBar"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@+id/img"
                android:textSize="10dp"
                android:text="(204)"/>
            <TextView
                android:id="@+id/nama_prduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_margin="8dp"
                android:text="Nama Produk"/>

            <TextView
                android:id="@+id/jumlah_penilaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/img"
                android:layout_margin="8dp"
                android:text="204 Penilaian" />

            <RelativeLayout
                android:id="@+id/rl_kiri"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_prduk"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/ratting"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="5.8"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_kanan"
                android:layout_toRightOf="@+id/rl_kiri"
                android:layout_below="@+id/nama_prduk"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="5 Bintang"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="180"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/b"
                    android:layout_below="@+id/a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="5 Bintang"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="180"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/c"
                    android:layout_below="@+id/b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="5 Bintang"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="180"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/d"
                    android:layout_below="@+id/c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="5 Bintang"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="180"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/e"
                    android:layout_below="@+id/d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="5 Bintang"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="180"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"/>
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_lihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                android:layout_below="@+id/rl_kanan"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#fff"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
